<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yyqijian9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/out_padding"
        android:paddingRight="@dimen/out_padding">


        <LinearLayout
            android:id="@+id/ll_hand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hand_height"
            android:layout_marginTop="@dimen/hand_tb_margin_top"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian26" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian25" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian24" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian23" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian22" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian21" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian20" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/pitch_height"
            android:layout_below="@id/ll_hand"
            android:layout_marginTop="@dimen/hand_tb_margin_top"
            android:background="@drawable/yyqijian27" />

        <LinearLayout
            android:id="@+id/ll_pitch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/symbol_height"
            android:layout_below="@id/ll_hand"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/do_re_margin_bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian15" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/do_re_margin_bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian14" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_marginTop="@dimen/mi_fa_margin_top"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian19" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_marginTop="@dimen/mi_fa_margin_top"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian18" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_marginTop="@dimen/sol_la_margin_top"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian17" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_marginTop="@dimen/sol_la_margin_top"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian16" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian13" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/pitch_margin_top_2"
                android:layout_marginTop="-20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/yyqijian12" />
        </LinearLayout>
        <!--//android:layout_marginTop="@dimen/hand_tb_margin_top"-->
        <LinearLayout
            android:id="@+id/llKeys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ll_pitch"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/duo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian1" />

            <Button
                android:id="@+id/re"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian2" />

            <Button
                android:id="@+id/mi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian3" />

            <Button
                android:id="@+id/fa"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian4" />

            <Button
                android:id="@+id/sol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian5" />

            <Button
                android:id="@+id/la"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian6" />

            <Button
                android:id="@+id/si"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian7" />

            <Button
                android:id="@+id/do1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyqijian8" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_animation"
        android:layout_width="@dimen/dp_174"
        android:layout_height="@dimen/dp_116"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_8"
        android:scaleType="fitCenter"
        android:translationX="@dimen/dp_6" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/music_xueyingaobeijng_1920" />

    <ImageView
        android:id="@+id/im_go_home"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_46"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@drawable/home" />


    <ImageButton
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_58"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/music_xueerge"
        android:onClick="learnChildSong"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:id="@+id/ll_pitch"
        android:layout_width="@dimen/dp_422"
        android:layout_height="@dimen/dp_121"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_130">

        <!--   <ImageView
               android:id="@+id/yuekuang"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_121"
               android:background="@drawable/music_yinyuekaung" />-->


        <ImageView
            android:id="@+id/im_do"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_4_5"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian15"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_re"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_toRightOf="@id/im_do"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian14"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_mi"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_toRightOf="@id/im_re"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian19"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_fa"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_35"
            android:layout_toRightOf="@id/im_mi"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian18"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_sol"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_38"
            android:layout_toRightOf="@id/im_fa"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian17"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_la"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_27"
            android:layout_toRightOf="@id/im_sol"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian16"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_si"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/im_la"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian13"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/im_dol"
            android:layout_width="@dimen/dp_37"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_3_5"
            android:layout_toRightOf="@id/im_si"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/yyqijian12"
            android:visibility="invisible" />
    </RelativeLayout>
    <!--//android:layout_marginTop="@dimen/hand_tb_margin_top"-->
    <LinearLayout
        android:id="@+id/llKeys"
        android:layout_width="@dimen/dp_510"
        android:layout_height="@dimen/dp_106"
        android:layout_below="@id/ll_pitch"
        android:layout_centerHorizontal="true"
        android:background="@drawable/music_yinyuekaung_gangqinkuang"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_38"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/dp_38">

        <Button
            android:id="@+id/duo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_1" />

        <Button
            android:id="@+id/re"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_2" />

        <Button
            android:id="@+id/mi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_3" />

        <Button
            android:id="@+id/fa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_4" />

        <Button
            android:id="@+id/sol"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_5" />

        <Button
            android:id="@+id/la"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_6" />

        <Button
            android:id="@+id/si"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_7" />

        <Button
            android:id="@+id/do1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/music_keysdianjiqian_8" />
    </LinearLayout>

</RelativeLayout>